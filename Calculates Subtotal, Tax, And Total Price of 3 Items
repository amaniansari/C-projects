//This program calculates one's BMI (Body Mass Index)
#include<iostream>
using namespace std;
void main()
{
	//Declare all variables
	double weight, height_ft, height_in, height, BMI;
	//Read inputs
	//Read weight, height_ft, height_in
	cout << "Enter weight: ";
	cin >> weight;
	cout << "Enter height (feet): ";
	cin >> height_ft;
	cout << "Enter height (inches): ";
	cin >> height_in;
	// Calculate height
	height = (height_ft * 12) + height_in;
	//Calculate BMI
	BMI = (weight * 703) / (height * height);
	//Display BMI
	cout << "Your BMI is " << BMI << endl;
	cout << "Coded by Amani Ansari" << endl;
}	//End main

