//This program calculates and displays the subtotal of three items, the tax on those three items, and the total price. 
#include<iostream>
using namespace std;
void main()
{
	//Declare all variables
	double tax_rate, price1, price2, price3, subtotal, tax, totalAmount;
	//Read inputs
	//Read tax_rate, price1, price2, price3
	cout << "Enter tax rate as percentage: ";
	cin >> tax_rate;
	cout << "Enter price of first item: ";
	cin >> price1;
	cout << "Enter price of second item: ";
	cin >> price2;
	cout << "Enter price of third item: ";
	cin >> price3;
	//Calculate subtotal, tax, totalAmount
	subtotal = price1 + price2 + price3;
	tax = (tax_rate / 100) * subtotal;
	totalAmount = tax + subtotal;
	//Display outputs
	cout << "Subtotal: $" << subtotal << endl;
	cout << "Tax: $" << tax << endl;
	cout << "Total: $" << totalAmount << endl;
	cout << "Coded by Amani Ansari" << endl;
} 	//End main

/*
